# Open Banking Backend Environment Variables
# Copy this file to .env and update the values as needed

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=openbanking
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# MongoDB Configuration
MONGODB_URI=mongodb://mongo:mongo123@mongodb:27017/openbanking_docs

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_ZOOKEEPER=kafka:2181

# MinIO Configuration (S3-compatible)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=openbanking-documents
MINIO_USE_SSL=false

# Keycloak Configuration
KEYCLOAK_URL=http://keycloak:8080/auth
KEYCLOAK_REALM=openbanking
KEYCLOAK_CLIENT_ID=openbanking-api
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Vault Configuration
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=root

# Mail Configuration (MailHog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@openbanking.com

# LocalStack Configuration (AWS Services Emulation)
AWS_ENDPOINT=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# External APIs
VIACEP_API_URL=https://viacep.com.br/ws
PIX_API_URL=https://pix-api.example.com
PIX_API_KEY=your-pix-api-key

# Development Tools
WIREMOCK_URL=http://wiremock:8080
